<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="221dp" />

        <TextView
            android:id="@+id/txtTituloReport"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="19dp"
            android:layout_marginEnd="20dp"
            android:text="Titulo del test"
            android:textSize="20sp"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imgPortadaReport"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:visibility="invisible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtTituloReport"
            app:srcCompat="@drawable/imgprincipal" />

        <TextView
            android:id="@+id/txtEmailTestReport"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:text="CorreoEmal@gmail.com"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imgPortadaReport"
            app:layout_constraintTop_toBottomOf="@+id/txtTituloReport" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:text="Nombre:"
            app:layout_constraintStart_toEndOf="@+id/imgPortadaReport"
            app:layout_constraintTop_toBottomOf="@+id/txtEmailTestReport" />

        <TextView
            android:id="@+id/txtNameTestReport"
            android:layout_width="0dp"
            android:layout_height="19dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp"
            android:text="Usuario"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@+id/textView15"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView15"
            app:layout_constraintTop_toTopOf="@+id/textView15" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:text="NÃºmero de reportes:"
            app:layout_constraintStart_toEndOf="@+id/imgPortadaReport"
            app:layout_constraintTop_toBottomOf="@+id/textView15" />

        <TextView
            android:id="@+id/txtNReportTestReport"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp"
            android:text="0"
            android:textColor="#CC1414"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@+id/textView19"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView19"
            app:layout_constraintTop_toTopOf="@+id/textView19" />

        <Button
            android:id="@+id/bViewReporterTest"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Ver Test"
            app:layout_constraintStart_toEndOf="@+id/imgPortadaReport"
            app:layout_constraintTop_toBottomOf="@+id/textView19" />

        <Button
            android:id="@+id/bBanTest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Banear"
            app:layout_constraintBottom_toBottomOf="@+id/bViewReporterTest"
            app:layout_constraintEnd_toStartOf="@+id/bViewReporterTest"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/bViewReporterTest" />

        <ProgressBar
            android:id="@+id/pBImgReport"
            style="?android:attr/progressBarStyle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/imgPortadaReport"
            app:layout_constraintEnd_toEndOf="@+id/imgPortadaReport"
            app:layout_constraintStart_toStartOf="@+id/imgPortadaReport"
            app:layout_constraintTop_toTopOf="@+id/imgPortadaReport" />

        <ProgressBar
            android:id="@+id/pBEmailReport"
            style="?android:attr/progressBarStyle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/txtEmailTestReport"
            app:layout_constraintEnd_toEndOf="@+id/txtEmailTestReport"
            app:layout_constraintStart_toStartOf="@+id/txtEmailTestReport"
            app:layout_constraintTop_toTopOf="@+id/txtEmailTestReport" />

        <ProgressBar
            android:id="@+id/pBNameReport"
            style="?android:attr/progressBarStyle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/txtNameTestReport"
            app:layout_constraintEnd_toEndOf="@+id/txtNameTestReport"
            app:layout_constraintStart_toStartOf="@+id/txtNameTestReport"
            app:layout_constraintTop_toTopOf="@+id/txtNameTestReport" />

        <ProgressBar
            android:id="@+id/pBNReport"
            style="?android:attr/progressBarStyle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/txtNReportTestReport"
            app:layout_constraintEnd_toEndOf="@+id/txtNReportTestReport"
            app:layout_constraintStart_toStartOf="@+id/txtNReportTestReport"
            app:layout_constraintTop_toTopOf="@+id/txtNReportTestReport" />

        <ProgressBar
            android:id="@+id/pBTituloReport"
            style="?android:attr/progressBarStyle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/txtTituloReport"
            app:layout_constraintEnd_toEndOf="@+id/txtTituloReport"
            app:layout_constraintStart_toStartOf="@+id/txtTituloReport"
            app:layout_constraintTop_toTopOf="@+id/txtTituloReport" />

        <Button
            android:id="@+id/bVerReports"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ver reports"
            app:layout_constraintBottom_toBottomOf="@+id/bViewReporterTest"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/bViewReporterTest"
            app:layout_constraintTop_toTopOf="@+id/bViewReporterTest" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>